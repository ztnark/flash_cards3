<div class="container">
  <h1>Login:</h1>

<form action="/login" method="POST" name="signup">
  <div>
    <label for="email">Email</label>
    <input id="email" type="text" name="user[email]">
  </div>
  <div>
    <label for="password">Password</label>
    <input id="password" type="password" name="user[password]">
  </div>
  <input type="submit">
</form>
</div>
