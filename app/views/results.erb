  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <script src="http://code.highcharts.com/highcharts.js"></script>


<nav>
  <a class="logo" href="/welcome">Logo</a>
  <ul>
    <li><a href="/results/<%= session[:id]%>">View Past Results</a></li>
    <li><a href="/logout">Logout</a></li>
  </ul>
</nav>


<h1> Your results</h1>
<ul>
  
  <% scores =[] %>
  <% @user_games.each do |x| %>
 <% correct = x.guesses.where(response: "true").count %>
  <% total = x.guesses.count %>
  <% percent = correct.to_f/total.to_f*100 %>
  <% scores << percent%>

  <li> Game ID: <%= x.id%> Deck: <%=x.deck.name.capitalize%> Score: <%= percent %>%</li>
 <%  end %>

</ul>
<script>
$(function () {
        $('#chart').highcharts({
            title: {
                text: 'Scores',
                x: -20 //center
            },
    
          
            yAxis: {
                title: {
                    text: 'Games Played'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: 'Goal',
                data: [75,77,80,82,86,90,97]
            }, {
                name: 'You',
                data: <%= scores %>
            }]
        });
    });
    </script>

    
<div id="chart" style="width:100%; height:400px;"></div>
