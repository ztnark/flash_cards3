<h1> Your results</h1>
<ul>
  
  <% scores =[] %>
  <% @user_games.each do |x| %>
 <% correct = x.guesses.where(response: "true").count %>
  <% total = x.guesses.count %>
  <% percent = correct.to_f/total.to_f*100 %>
  <% scores<< percent%>

  <li> Game ID: <%= x.id%> Deck: <%=x.deck.name.capitalize%> Score: <%= percent %>%</li>
 <%  end %>

 <%= scores %>

</ul>
<script>
$(function () {
        $('#chart').highcharts({
            title: {
                text: 'Scores',
                x: -20 //center
            },
    
            xAxis: {
                categories: [1,2]
            },
            yAxis: {
                title: {
                    text: 'Score'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: 'Â°C'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [{
                name: 'Average',
                data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
            }, {
                name: 'You',
                data: <%= scores %>
            }]
        });
    });
    </script>

    
<div id="chart" style="width:100%; height:400px;"></div>
